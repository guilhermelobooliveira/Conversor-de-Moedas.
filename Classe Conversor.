    private void CalcularActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_CalcularActionPerformed
        // Fiz os Cálculos das Conversões das Moedas!
        
        DólarAustraliano.setText(" Real para Dolar Australiano: " + (Float.parseFloat(Moedas.getText()) * 3.14) + "\n" + " Euro para Dolar Australiano: " + (Float.parseFloat(Moedas.getText()) * 3.12) + "\n" + " Dolar Canadense para Dolar Australiano: " + (Float.parseFloat(Moedas.getText()) * 3.10));
    }//GEN-LAST:event_CalcularActionPerformed

    private void SairActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_SairActionPerformed
        // Fiz um Botão para Finalizar o Programa!
        
        System.exit(0);
    }//GEN-LAST:event_SairActionPerformed

    private void AutordoProgramaActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_AutordoProgramaActionPerformed
        // Fiz uma Caixa de Diálogo para Agradecer ao Usuário pela Preferência!
        
        AutordoPrograma.setText(" Muito Obrigado! ");
    }//GEN-LAST:event_AutordoProgramaActionPerformed

